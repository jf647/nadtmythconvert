# select every 3 hours
5  */3 *   *   *   sudo -u mythtv -i /home/mythtv/bin/mythpublish_select
# publish late at night every day
10  2   *   *   *   sudo -u mythtv -i /home/mythtv/bin/mythpublish_publish
# publish in the early afternoon on weekdays
10  13   *   *   1,2,3,4,5   sudo -u mythtv -i /home/mythtv/bin/mythpublish_publish
# inform every 6 hours
15  */6 *   *   *   sudo -u mythtv -i /home/mythtv/bin/mythpublish_inform
# update status every hour
20  *   *   *   *   sudo -u mythtv -i /home/mythtv/bin/mythpublish_updatestatus
